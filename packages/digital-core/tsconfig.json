{
    "include": ["src/**/*"],
    "compilerOptions": {
        "allowJs": true,
        "declaration": true,
        "emitDeclarationOnly": true,
        "rootDir": "src",
        "outDir": "dist",
        "checkJs": false,
        "moduleResolution": "bundler",
        "target": "ESNext",
        "module": "ESNext",
        "skipLibCheck": true
    }
}
