{
    "compilerOptions": {
        "allowJs": true,
        "target": "ES2020",
        "module": "ESNext",
        "lib": ["ES2020", "DOM", "DOM.Iterable"],
        "moduleResolution": "bundler",
        "strict": true,
        "esModuleInterop": true,
        "useDefineForClassFields": false,
        "declaration": true,
        "jsx": "react-jsx",
        "outDir": "dist",
        "types": ["vite/client", "@digital-net-org/digital-ui-react-types"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
